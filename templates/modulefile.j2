#%Module 1.0
# Generated by ansible from the template file
# ansible-role-cuda-prefix/templates/modulefile.js

prepend-path  PATH {{ path }}/bin
prepend-path  MANPATH {{ path }}/man
prepend-path  LD_LIBRARY_PATH {{ path }}/lib

# Rationale for setting the environment variable CUDA_BIN_PATH:
#
# CMake makes use of the environment variable CUDA_BIN_PATH
# when it searches for CUDA, i.e. when a CMakeLists.txt file contains the line
# 
# find_package(CUDA 8.0 REQUIRED) 
#
# More documentation:
# https://cmake.org/cmake/help/v3.7/module/FindCUDA.html

setenv CUDA_BIN_PATH {{ path }}/bin

setenv CUDA_HOME {{ path }}

module-whatis NVidia CUDA version {{ cuda_version }}. Module file generated from ansible-role-cuda-prefix.
